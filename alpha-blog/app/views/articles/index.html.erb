<h1>Articles listing page</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>    
      <th>Views</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th colspan="3">Actions</th>
      <th>Writer</th>
      <th>Writer id</th>

    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
    <tr>
      <td><%= article.title%></td>
      <td><%= article.description%></td>
      <td><%= article.views%></td>
      <td><%= l article.created_at%></td>
      <td><%= article.updated_at.strftime("%d/%m/%Y")%></td>
    <td><%= link_to 'Show', article_path(article) %></td>
    <% if policy(article).update? %>
    <td><%= link_to 'Edit', edit_article_path(article) %>
    <% end %>
    <% if policy(article).destroy? %>
    <td><%= link_to 'destroy', article_path(article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
    <% end %>
    <td><%= article.user.username if article.user %></td>
    <td><%= article.user.id if article.user %></td>

    </tr>
    <% end %>
  </tbody>
</table>
